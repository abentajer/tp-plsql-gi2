
CREATE OR REPLACE FUNCTION convertir(a IN NUMBER, b IN number )
RETURN number IS 
PU number(20);
BEGIN
	select  Prix_TTC into PU from commande where numcommande=b;
	IF( a=1 ) THEN
   	PU:= PU/10.62; /*conversion de mad en euro*/
    END IF;
	IF(i=2) THEN
	PU  := PU/9.65; /*conversion de mad en dollar*/
	END IF;
    RETURN PU;
END;
/
